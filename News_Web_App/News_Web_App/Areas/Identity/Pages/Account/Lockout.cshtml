@page
@model LockoutModel
@{
    Layout = "";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account Locked</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f4f6f9;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .lockscreen-wrapper {
            max-width: 400px;
            padding: 30px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.15);
            text-align: center;
        }

        .lockscreen-logo a {
            font-size: 24px;
            font-weight: bold;
            color: #333;
            text-decoration: none;
        }

        .lock-icon {
            font-size: 50px;
            color: #dc3545;
            margin-bottom: 15px;
        }

        .help-block p {
            font-size: 16px;
            color: #dc3545;
            font-weight: bold;
        }

        .btn-custom {
            width: 100%;
            padding: 12px;
            font-size: 16px;
            font-weight: bold;
            margin-top: 10px;
            border-radius: 8px;
            transition: 0.3s;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .btn-secondary {
            background-color: #6c757d;
            border: none;
        }

            .btn-secondary:hover {
                background-color: #545b62;
            }

        .lockscreen-footer {
            font-size: 12px;
            color: #666;
            margin-top: 15px;
        }
    </style>
</head>
<body>
    <div class="lockscreen-wrapper">
        <div class="lockscreen-logo">
            <a href="#"><b>Admin</b>LTE</a>
        </div>
        <div class="lock-icon">
            🔒
        </div>
        <div class="help-block text-center">
            <p>Your account has been locked. Please try again later.</p>
        </div>
        <div class="text-center">
            <a href="/Identity/Account/Login" class="btn btn-primary btn-custom">Sign in as a different user</a>
            <a href="/Home/Index" class="btn btn-secondary btn-custom">Back to Home</a>
        </div>
        <div class="lockscreen-footer text-center">
            &copy; 2014-2024 AdminLTE - All rights reserved.
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
