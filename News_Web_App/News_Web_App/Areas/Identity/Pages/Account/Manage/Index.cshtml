@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<style>
    .profile-picture {
        height: 250px;
        width: 250px;
        object-fit: cover;
        border-radius: 50%;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        margin-bottom: 20px;
    }
</style>

<div class="center-container">
    <div class="form-container">
        <partial name="_StatusMessage" for="StatusMessage" />
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Username" class="form-control" placeholder=" " disabled />
                        <label asp-for="Username" class="form-label">Username</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Name" class="form-control" placeholder=" " />
                        <label asp-for="Input.Name" class="form-label">Name</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Address" class="form-control" placeholder=" " />
                        <label asp-for="Input.Address" class="form-label">Address</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.PhoneNumber" class="form-control" placeholder=" " />
                        <label asp-for="Input.PhoneNumber" class="form-label">Phone Number</label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>

                    <!-- Social Links Inputs -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Facebook" class="form-control" placeholder="Facebook Link" />
                        <label asp-for="Input.Facebook">Facebook Link</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.GitHub" class="form-control" placeholder="GitHub Link" />
                        <label asp-for="Input.GitHub">GitHub Link</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Instagram" class="form-control" placeholder="Instagram Link" />
                        <label asp-for="Input.Instagram">Instagram Link</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Twitter" class="form-control" placeholder="Twitter Link" />
                        <label asp-for="Input.Twitter">Twitter Link</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Linkedin" class="form-control" placeholder="LinkedIn Link" />
                        <label asp-for="Input.Linkedin">LinkedIn Link</label>
                    </div>

                    <!-- About Me Section -->
                    <div class="form-floating mb-3">
                        <textarea asp-for="Input.About" class="form-control" placeholder="Tell us about yourself" style="height: 160px; resize: none;"></textarea>
                        <label asp-for="Input.About">About Me</label>
                        <span asp-validation-for="Input.About" class="text-danger"></span>
                    </div>

                </div>

                <div class="col-md-6 text-center">
                    @if (Model.Input.ProfilePicture != null)
                    {
                        <img id="profilePicture" alt="profile" class="profile-picture" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfilePicture))" />
                    }
                    else
                    {
                        <img id="profilePicture" alt="profile" class="profile-picture" src="~/img/user-photo.png" />
                    }

                    <div class="custom-file">
                        <input type="file" accept="image/*" asp-for="Input.ProfilePicture" class="form-control mt-3"
                               onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
                        <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
                    </div>
                    <button id="update-profile-button" type="submit" style="margin-top: 10px;" class="w-100 btn btn-lg btn-primary">
                        Save
                    </button>

                </div>
            </div>
        </form>
    </div>
</div>
